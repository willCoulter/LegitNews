<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @article.user.name, @article.user %>
</p>

<h1>Comments</h1>
<table>
  <thead>
  <tr>
    <th>Message</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @article.comments.each do |post| %>
    <tr>
      <td><%=post.message %></td>
      <td><%= link_to "Post",post%></td>
    </tr>
  <%end%>
  </tbody>
</table>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
